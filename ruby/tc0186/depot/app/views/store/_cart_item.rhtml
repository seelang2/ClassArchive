    <tr 
	<% if cart_item == @current_item %>
	  id="current_item"
	<% end %>
	>
      <td><%= cart_item.quantity %></td>
	  <td><%= h(cart_item.title) %></td>
	  <td class="item-price"><%= number_to_currency(cart_item.price) %></td>
	  <td>
		<% form_remote_tag :url => { :action => :remove_from_cart, :id => cart_item.product } do %>
		  <%= submit_tag "X" %>
		<% end %>
	  </td>
	<tr>
