body {
	font-family: verdana;
	background: #7a7a7a;
	text-align: center;
}

body, td {
	font-size: 76%;
}

#wrapper {
	margin: 0 auto;
	padding: 0;
	text-align: left;
	background: #6666ff;
	width: 60em;
}

#header {
	margin: 0;
	padding: 0;
	background: #cccccc;
	height: 75px;
	overflow: hidden;
}

#content {
	margin: 0;
	padding: 0;
	background: #ffffff;
	float: left;
	width: 58%;
}

#sidebar {
	margin: 0;
	padding: 0;
	float: right;
	width: 38%;
	color: #ffffff;
}

#footer {
	margin: 0;
	padding: 0;
	background: #bbbbbb;
	height: 40px;
	overflow: hidden;
	clear: both;
}

#statusbar {
	float: right;
	color: #ff0000;
	font-weight: bold;
	visibility: hidden;
}

.producttable {
	width: 100%;
}

.producttablerow1 {
	background: #ddddff;
}

.producttablerow2 {
	background: #aaaaff;
}

table.producttable tr:hover {
	background: #eeeeff;
}

#hover {
	position: absolute;
	top: 0;
	left: 0;
	width: 150px;
	height: 180px;
/*	border: 1px solid #FF9900;
	text-align: center; */
	padding: 10px;
	background: transparent url(hoverbg.png) no-repeat;
	visibility:hidden; /**/
	z-index:555;
}

#hoverdata {
	width: 110px;
	height: 145px;
	margin: 5px 0 0 6px;
	text-align:left;
/*	background: #FFFFCC; */
	z-index:556;
}

#hoverbut {
	margin: 15px 0 0 -20px;
	z-index:556;
}

#cart, #wastebin {
	border: 1px solid #ffffff;
	width: 90%;
	margin: 5px auto;
}

input#name {
	width: 14em;
}
input#size {
	width: 6em;
}
input#color {
	width: 6em;
}
input#type {
	width: 3em;
}
input#price {
	width: 5em;
}